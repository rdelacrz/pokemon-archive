{
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
